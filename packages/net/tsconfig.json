{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false,
    //    "target": "es2018",
    "target": "esnext",
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "sourceMap": true,
        "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "outDir": "./dist",
    //    "rootDir": "./",
    "baseUrl": "."
    //    "paths": {
    //      "modules": ["../../modules"],
    //      "lib-shared": ["../../lib-shared"]
    //    }
  },
  "disableWarnings": false,
  "include": [
    "./src"
    //    "./src/**/*"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/test/*",
    "/dist",
    "test/"
  ],
  "references": [
  ]
}
